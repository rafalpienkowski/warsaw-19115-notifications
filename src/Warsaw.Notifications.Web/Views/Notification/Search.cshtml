@using System.Linq
@model IEnumerable<NotificationViewModel>

<h2>
    Results for @ViewBag.District:
</h2>
<div class="row">
    <div class="col-md-12">
        <table id="search" class="table table-striped .table-hover">
            <thead>
                <tr>
                    <th>City</th>
                    <th>District</th>
                    <th>Street</th>
                    <th>Source</th>
                    <th>Notification Type</th>
                    <th>Notification Number</th>
                    <th>Create Date</th>
                    <th>Category</th>
                    <th>Subcategory</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.City</td>
                    <td>@item.District</td>
                    <td>@item.Street</td>
                    <td>@item.Source</td>
                    <td>@item.NotificationType</td>
                    <td>@item.NotificationNumber</td>
                    <td>@item.CreateDate</td>
                    <td>@item.Category</td>
                    <td>@item.Subcategory</td>
                </tr>
            }
            </tbody>
        </table>
    </div> 
</div>  


<div class="row top-buffer">
    <div class="col-md-12">
        <a class="btn btn-default" asp-controller="Notification" asp-action="Index">Back</a>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function(){
            $('#search').DataTable( {
                "order": [[ 0, "desc" ]]
            });
        });
    </script>
}